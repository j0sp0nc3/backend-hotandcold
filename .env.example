# Firebase Service Account Configuration
# NEVER commit the actual .env file - use .env.example as template
# Copy this file to .env and fill with your actual values

# Firebase Admin SDK Credentials
# Get these from: Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_TYPE=service_account
FIREBASE_PROJECT_ID=hotandcold-nuevo
FIREBASE_PRIVATE_KEY_ID=your_key_id_here
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@hotandcold-nuevo.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id_here
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=your_cert_url_here

# Email Configuration (Optional)
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password
EMAIL_TO=destinatario@example.com

# Server Configuration
PORT=3001
NODE_ENV=development

# Note: Never share .env file or commit it to git
# The .gitignore file already excludes it from version control
